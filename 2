<!DOCTYPE html>
<html>
<head>
  <style>
    .grid-container {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 10px;
    }

    .square {
      width: 100px;
      height: 100px;
      background-color: #ccc;
    }
  </style>
</head>
<body>
  <div class="grid-container">
    <button onclick="changeColor(0)">1</button>
    <button onclick="changeColor(1)">2</button>
    <button onclick="changeColor(2)">3</button>
  </div>
  <div class="square" id="colorSquare"></div>

  <script>
    function changeColor(index) {
      var colors = ['#ff0000', '#00ff00', '#0000ff'];
      var square = document.getElementById('colorSquare');
      square.style.backgroundColor = colors[index];
    }
  </script>
</body>
</html>
